<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">
		<field 
			name="id" 
			type="hidden"   
			default="0" 
		/>
    	<field 
    		name="state" 
    		default="1" 
    		type="list" 
    		label="JSTATUS" 
    		description="JFIELD_PUBLISHED_DESC" 
    		class="inputbox" 
    		size="1"
    	>
      		<option value="1">JPUBLISHED</option>
      		<option value="0">JUNPUBLISHED</option>
      		<option value="2">JARCHIVED</option>
      		<option value="-2">JTRASHED</option>
    	</field>
    	<field 
    		name="title" 
    		filter="safehtml" 
    		type="text" 
    		required="true" 
    		label="COM_DESCARGAS_FORM_LBL_FTPF_TITLE" 
    		description="COM_DESCARGAS_FORM_DESC_FTPF_TITLE" 
    	/>
    	<field 
    		name="path"  
    		type="text" 
    		required="true" 
    		label="COM_DESCARGAS_FORM_LBL_FTPF_PATH" 
    		description="COM_DESCARGAS_FORM_DESC_FTPF_PATH" 
    	/>  	    	
    	<field 
    		name="checked_out" 
    		type="hidden" 
    		filter="unset"
    	/>
    	<field 
    		name="checked_out_time" 
    		default="0000-00-00 00:00:00" 
    		type="hidden" 
    		filter="unset"
    	/>
    	<field 
    		name="createDate" 
    		type="calendar" 
    		default="NOW" 
    		label="COM_DESCARGAS_FORM_LBL_DOCUMENTO_CREATEDATE_BY"
    		description="COM_DESCARGAS_FORM_DESC_DOCUMENTO_CREATEDATE_BY"  
    		format="%Y-%m-%d %H:%M:%S"
    	/>
    	<field 
    		name="created_by" 
    		type="createdby" 
    		default="0" 
    		label="COM_DESCARGAS_FORM_LBL_DOCUMENTO_CREATED_BY"
    		description="COM_DESCARGAS_FORM_DESC_DOCUMENTO_CREATED_BY" 
    		hidden="true" 
    		hint="COM_DESCARGAS_FORM_LBL_DOCUMENTO_CREATED_BY"
    	/>
    	<field 
    		name="finishDate" 
    		type="calendar" 
    		default="NOW" 
    		label="COM_DESCARGAS_FORM_LBL_DOCUMENTO_FINISHDATE_BY"
    		description="COM_DESCARGAS_FORM_DESC_DOCUMENTO_FINISHDATE_BY"  
    		format="%Y-%m-%d %H:%M:%S"
    	/>
    	<field 
    		name="modified_by" 
    		type="modifiedby" 
    		default="0" 
    		label="COM_DESCARGAS_FORM_LBL_DOCUMENTO_MODIFIED_BY" 
    		description="COM_DESCARGAS_FORM_DESC_DOCUMENTO_MODIFIED_BY" 
    		hidden="true"
    		hint="COM_DESCARGAS_FORM_LBL_DOCUMENTO_MODIFIED_BY"
    	/>
   </fieldset>
</form>
